<?xml version="1.0"?>

<!-- For more information on using Web.config transformation visit http://go.microsoft.com/fwlink/?LinkId=301874 -->

<configuration xmlns:xdt="http://schemas.microsoft.com/XML-Document-Transform">
  <!--
    In the example below, the "SetAttributes" transform will change the value of
    "connectionString" to use "ReleaseSQLServer" only when the "Match" locator
    finds an attribute "name" that has a value of "MyDB".
  -->
    <connectionStrings>
      <add name="DefaultSqlConnection"
        connectionString="Server=tcp:collectitsqlserver.database.windows.net,1433;Database=collectitSQL;User ID=base@collectitsqlserver;Password=London#2016;Encrypt=True;TrustServerCertificate=False;Connection Timeout=30;"
        xdt:Transform="SetAttributes" xdt:Locator="Match(name)"/>
    </connectionStrings>

  <system.web>
    <compilation xdt:Transform="RemoveAttributes(debug)" />
    <!--
      In the example below, the "Replace" transform will replace the entire
      <customErrors> section of your Web.config file.
      Note that because there is only one customErrors section under the
      <system.web> node, there is no need to use the "xdt:Locator" attribute.

      <customErrors defaultRedirect="GenericError.htm"
        mode="RemoteOnly" xdt:Transform="Replace">
        <error statusCode="500" redirect="InternalError.htm"/>
      </customErrors>
    -->
  </system.web>
  <system.serviceModel>
    <client>
      <endpoint xdt:Transform="Replace" xdt:Locator="Match(contract)" address="http://collectit.cloudapp.net:8080/StatusService.svc" binding="basicHttpBinding" bindingConfiguration="basicHttp" contract="StatusService.IStatusService" name="BasicHttpBinding_IStatusService" />
      <endpoint xdt:Transform="Replace" xdt:Locator="Match(contract)" address="http://collectit.cloudapp.net:8080/SubscriptionService.svc" binding="basicHttpBinding" bindingConfiguration="basicHttp" contract="SubscriptionService.ISubscriptionService" name="BasicHttpBinding_ISubscriptionService" />
      <endpoint xdt:Transform="Replace" xdt:Locator="Match(contract)" address="http://collectit.cloudapp.net:8080/ChannelService.svc" binding="basicHttpBinding" bindingConfiguration="basicHttp" contract="ChannelService.IChannelService" name="BasicHttpBinding_IChannelService" />
      <endpoint xdt:Transform="Replace" xdt:Locator="Match(contract)" address="http://collectit.cloudapp.net:8080/ItemService.svc" binding="basicHttpBinding" bindingConfiguration="basicHttp" contract="ItemService.IItemService" name="BasicHttpBinding_IItemService" />
    </client>
  </system.serviceModel>
</configuration>
